# Environment Configuration Template

# ==========================================
# Required Configuration
# ==========================================

# JWT Secret for token signing (REQUIRED in production)
SKULLDB_JWT_SECRET=your-super-secret-jwt-key-change-this

# ==========================================
# Server Configuration
# ==========================================

# Data directory for persistence
SKULLDB_DATA_DIR=data

# HTTP server port
SKULLDB_HTTP_PORT=4000
PORT=4000

# Enable/disable HTTP server
SKULLDB_HTTP_ENABLED=true

# ==========================================
# Security Configuration
# ==========================================

# Session timeout in seconds (default: 1 hour)
SKULLDB_SESSION_TIMEOUT=3600

# Enable audit logging
SKULLDB_AUDIT_ENABLED=true

# ==========================================
# Logging Configuration
# ==========================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# ==========================================
# CORS Configuration
# ==========================================

# Enable CORS
SKULLDB_CORS_ENABLED=true

# Allowed origins (comma-separated)
SKULLDB_CORS_ORIGINS=*

# Allowed methods (comma-separated)
SKULLDB_CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS

# Allowed headers (comma-separated)
SKULLDB_CORS_HEADERS=*

# ==========================================
# Rate Limiting
# ==========================================

# Enable rate limiting
SKULLDB_RATE_LIMIT_ENABLED=true

# Max requests per window
SKULLDB_RATE_LIMIT_MAX=100

# Window size in seconds
SKULLDB_RATE_LIMIT_WINDOW=60

# ==========================================
# Backup Configuration
# ==========================================

# Enable automated backups
SKULLDB_BACKUP_ENABLED=true

# Backup interval in seconds (default: 1 hour)
SKULLDB_BACKUP_INTERVAL=3600

# Backup retention in days
SKULLDB_BACKUP_RETENTION_DAYS=7

# Backup storage path
SKULLDB_BACKUP_PATH=data/backups

# ==========================================
# Cloud Provider Configuration
# ==========================================

# Cloud provider: aws, gcp, azure
CLOUD_PROVIDER=

# Cloud region
CLOUD_REGION=

# ==========================================
# AWS Configuration
# ==========================================

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# ==========================================
# GCP Configuration
# ==========================================

GCP_PROJECT=
GOOGLE_APPLICATION_CREDENTIALS=

# ==========================================
# Azure Configuration
# ==========================================

AZURE_SUBSCRIPTION_ID=
AZURE_TENANT_ID=

# ==========================================
# Environment
# ==========================================

# Environment: production, staging, development
SKULLDB_ENV=development
MIX_ENV=dev
